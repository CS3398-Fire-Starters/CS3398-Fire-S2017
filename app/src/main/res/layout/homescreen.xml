<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topSection"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#DDDDDD">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_dumbbell"
                    android:id="@+id/imageView"
                    android:layout_weight="0" />

                <TextView
                    android:text="Workout Companion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2"
                    android:layout_weight="0.77"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textIsSelectable="false"
                    android:textColor="#363636"
                    android:gravity="left|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_manage"
                    android:id="@+id/imageButton"
                    android:layout_weight="1"
                    android:background="#00000000" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleSection"
        android:background="#29A9D2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:text="Welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="32sp"
            android:textColor="#ffffff" />

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_checklist"
                android:id="@+id/imageButton_progress"
                android:layout_weight="1"
                android:layout_margin="30dp"
                android:background="#00000000"
                android:scaleX="3"
                android:scaleY="3" />

            <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_action_name"
            android:id="@+id/imageButton_addWorkout"
            android:layout_weight="1"
            android:scaleX="3"
            android:scaleY="3"
            android:background="#00000000"
                android:layout_margin="30dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_math"
            android:id="@+id/imageButton_otherFunctions"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleX="3"
            android:scaleY="3"
            android:layout_margin="30dp" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="View Your Progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_progress"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp" />
            <TextView
                android:text="Add New Workout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_newWorkout"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center_horizontal" />
            <TextView
                android:text="Other Functionality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_otherFunctions"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottomSection"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Recent Workout Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:textSize="24sp" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="#000000"
            android:dividerHeight="2px"
            android:labelFor="@+id/bottomSection"
            android:clickable="true"
            android:id="@+id/listView" />

    </LinearLayout>
</LinearLayout>