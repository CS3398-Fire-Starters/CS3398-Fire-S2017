<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.derek.workouttracker20.WeightRecord">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/editMiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text="Add Weight (lbs)"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="142dp" />

        <EditText
            android:id="@+id/Edit_inches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName|number"
            android:text="Add Reps"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="184dp" />

        <Button
            android:id="@+id/recordWorkoutLifting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="Record Workout"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="386dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>