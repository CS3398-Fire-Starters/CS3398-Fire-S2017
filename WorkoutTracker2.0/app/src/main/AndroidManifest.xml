<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.derek.workouttracker20">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Homescreen"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".NewWorkout">
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".OtherFunctions" >
        </activity>

        <activity
            android:name=".Stopwatch" >
        </activity>

        <activity android:name=".SettingsActivity" />

        <activity android:name=".Progress" />

        <activity
            android:name=".WorkoutSelect"
            android:label="@string/title_activity_workout_select"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JogRecord"
            android:label="@string/title_activity_jog_record"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeightRecord"
            android:label="@string/title_activity_weight_record"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BMICalculator"
            android:label="@string/calculateBMI"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>
</manifest>
